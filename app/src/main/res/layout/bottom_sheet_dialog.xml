<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/relativeBtm1"
    android:layout_height="wrap_content"
    android:background="@color/blue_shade1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course Name"
        android:id="@+id/txtBtmName"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:textSize="15sp"/>

    <ImageView
        android:id="@+id/imgBtm"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/txtBtmName"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:padding="4dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtBtmDesc"
        android:text="Description"
        android:layout_toRightOf="@id/imgBtm"
        android:textColor="@color/white"
        android:layout_below="@id/txtBtmName"
        android:padding="3dp"
        android:layout_margin="4dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtBtmSuited"
        android:text="Course Suited"
        android:layout_toRightOf="@id/imgBtm"
        android:textColor="@color/white"
        android:layout_below="@id/txtBtmDesc"
        android:padding="3dp"
        android:layout_margin="4dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtBtmPrice"
        android:text="Price"
        android:textSize="20sp"
        android:layout_toRightOf="@id/imgBtm"
        android:textColor="@color/white"
        android:layout_below="@id/txtBtmSuited"
        android:padding="3dp"
        android:layout_margin="4dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/imgBtm">
        
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:textColor="white"
            android:text="Edit Course"
            android:textAllCaps="false"
            android:id="@+id/btnBtmEdit"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:textColor="white"
            android:text="View Details"
            android:textAllCaps="false"
            android:id="@+id/btnBtmView"/>
    </LinearLayout>


</RelativeLayout>